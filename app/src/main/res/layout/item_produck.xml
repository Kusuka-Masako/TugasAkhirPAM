<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/kartu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="716dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/imageList"
            android:layout_width="320dp"
            android:layout_height="192dp"
            android:layout_gravity="center_horizontal"
            card_view:srcCompat="@drawable/roglogo" />

        <LinearLayout
            android:layout_width="216dp"
            android:layout_height="142dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_headline"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="199dp"
                android:layout_height="57dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:fontFamily="serif"
                android:text="HP Pavilion 15-dk1041TX"
                app:textStyle="bold" />

            <TextView
                android:id="@+id/text_subhead"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="203dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="Rp 15.299.000"
                android:textColor="#3D5AFE" />


        </LinearLayout>

        <TextView
            android:id="@+id/text_subheadb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_subheadc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text='Processor: i7-10750H\n" +             "RAM : 8GB\n" +             "HDD: 1TB\n" +             "SSD: 256GB\n" +             "VGA: NVIDIA GeForce GTX 1650 4GB\n" +             "Konektivitas: Wifi + Bluetooth\n" +             "Ukuran Layar: 15.6 Inch FHD\n" +             "Sistem Operasi: Windows 10 Home + Office Home Student 2019\n" +             "HP Pavilion 15-dk1041TX\n" +             "HP 300 Mouse\n" +             "Backpack' />

    </LinearLayout>


</androidx.cardview.widget.CardView>